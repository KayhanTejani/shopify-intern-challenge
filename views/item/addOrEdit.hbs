 <h3>{{viewTitle}}</h3>

<form action="/item/create" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{item._id}}">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" value="{{item.name}}">
    </div>
    <div class="form-group">
        <label>Category</label>
        <input type="text" class="form-control" name="category" value="{{item.category}}">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Quantity</label>
            <input type="text" class="form-control" name="quantity" value="{{item.quantity}}">
        </div>
        <div class="form-group col-md-6">
            <label>Price</label>
            <input type="text" class="form-control" name="price" value="{{item.price}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info" id="submit">Submit</button>
        <a class="btn btn-secondary" href="/" id="view-all"> View All</a>
    </div>
</form>