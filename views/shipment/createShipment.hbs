 <h3>Create Shipment</h3>

<form action="/shipment/create" method="POST">
    <input type="hidden" name="_id" value="{{item._id}}">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" value="{{item.name}}">
    </div>
    <div class="form-group">
        <label>Category</label>
        <input type="text" class="form-control" name="category" value="{{item.category}}">
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <input type="hidden" id="qty-available" value="{{item.quantity}}">
            <label>Quantity (Available: {{item.quantity}})</label>
            <input type="text" class="form-control" name="quantity" value="">
        </div>
        <div class="form-group col-md-6">
            <label>Price</label>
            <input type="text" class="form-control" name="price" value="{{item.price}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info">Submit</button>
                 <a class="btn btn-secondary" href="/shipment"> View All</a>
    </div>
</form>